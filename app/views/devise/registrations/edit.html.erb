<h2 style="color: #333;">Change Account Details</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, style: "background: #f9f9f9; padding: 20px; border-radius: 5px;" }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field" style="margin-bottom: 15px;">
    <%= f.label :email, style: "color: #555;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div class="field" style="margin-bottom: 15px;">
      <span style="color: #555;">Currently waiting confirmation for: <%= resource.unconfirmed_email %></span>
    </div>
  <% end %>

  <div class="field" style="margin-bottom: 15px;">
    <%= f.label :password, style: "color: #555;" %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
    <% if @minimum_password_length %>
      <br />
      <em style="color: #888;"><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field" style="margin-bottom: 15px;">
    <%= f.label :password_confirmation, style: "color: #555;" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div class="field" style="margin-bottom: 15px;">
    <%= f.label :current_password, style: "color: #555;" %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", style: "width: 100%; padding: 8px; border: 1px solid #ccc; border-radius: 4px;" %>
  </div>

  <div class="actions" style="margin-bottom: 15px;">
    <%= f.submit "Update", style: "background-color: #28a745; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer;" %>
  </div>
<% end %>

<div class="actions" style="margin-bottom: 15px;">
  <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, style: "background-color: #dc3545; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer;" %>
  <%= button_to "Logout", destroy_user_session_path, method: :delete, style: "background-color: #ffc107; color: white; padding: 10px 15px; border: none; border-radius: 4px; cursor: pointer;" %>
</div>

<%= link_to "Back", root_path , style: "color: #007bff; text-decoration: none;" %>